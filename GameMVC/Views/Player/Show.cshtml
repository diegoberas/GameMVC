@using GameMVC.Models
@model GameMVC.Models.Player
@{
    ViewBag.Title = "Show";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name @Model.Lastname</h2>
<p>
    @Html.ActionLink("Back", "Index", "Player", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Edit", "Edit", "Player", new { id = Model.Id }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Delete", "Delete", "Player", new { id = Model.Id }, new { @class = "btn btn-danger" })

</p>
<ul>
    <li><strong>Date of Birth:</strong> @Model.Birthdate.ToShortDateString()</li>

    <li><strong>Passport:</strong> @Model.Passport</li>

    <li><strong>Address:</strong> @Model.Address</li>

    <li><strong>Sex:</strong> @Model.Sex</li>

    <li><strong>Team:</strong>@if (Model.TeamId != null)
                              {
                                  @Model.Team.Name
                              }
                              else
                              {
                                  <text>Select team</text>
                              }</li>

    <li><strong>Status:</strong> @Model.State.NameState</li>
</ul>

