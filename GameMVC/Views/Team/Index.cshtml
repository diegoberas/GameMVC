@model IEnumerable<GameMVC.Models.Team>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Teams</h2>
<p>
    @Html.ActionLink("New Team", "New", "Team", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Team</th>
        <th>Country</th>
        <th>Status</th>
        <th>Founded</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var team in Model)
    {
        <tr>
            <td>@Html.ActionLink(team.Name, "Show", "Team", new { id = team.Id }, null)</td>
            <td>@team.Country.Alpha3</td>
            <td>@team.Status</td>
            <td>@team.CreationDate.Year</td>
        </tr>
    }
    </tbody>
</table>


