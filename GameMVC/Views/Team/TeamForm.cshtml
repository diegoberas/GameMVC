@model GameMVC.ViewModels.TeamFormViewModel
@{
    ViewBag.Title = "TeamForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Team</h2>
@using (@Html.BeginForm("Save", "Team"))
{
    <div class="form-group">
        @Html.LabelFor(t => t.Team.Name)
        @Html.TextBoxFor(t => t.Team.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(t => t.Team.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(t => t.Team.Status)
        @Html.TextBoxFor(t => t.Team.Status, new { @class = "form-control" })
        @Html.ValidationMessageFor(t => t.Team.Status)
    </div>

    <div class="form-group">
        @Html.LabelFor(t => t.Team.CreationDate)
        @Html.TextBoxFor(t => t.Team.CreationDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(t => t.Team.CreationDate)
    </div>

    <div class="form-group">
        @Html.LabelFor(t => t.Team.CountryId)
        @Html.DropDownListFor(t => t.Team.CountryId, new SelectList(Model.Countries, "Id", "Alpha3"), "Select Country", new { @class = "form-control" })
        @Html.ValidationMessageFor(t => t.Team.CountryId)
    </div>


    @Html.HiddenFor(t => t.Team.Id)

    @Html.ActionLink("Back", "Index", "Team", null, new { @class = "btn btn-danger" })
    <button type="submit" class="btn btn-success">Save</button>
}

